{
    "info": {
        "_postman_id": "devscope-api-collection",
        "name": "DevScope API - GitHub Analytics",
        "description": "Complete API collection for DevScope GitHub Analytics Platform with Authentication",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8080",
            "type": "string"
        },
        {
            "key": "username",
            "value": "anantacoder",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Health & Status",
            "item": [
                {
                    "name": "Health Check",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/health",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "health"
                            ]
                        },
                        "description": "Check if the API is running and healthy"
                    }
                },
                {
                    "name": "Home Endpoint",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                ""
                            ]
                        },
                        "description": "Get API information and available endpoints"
                    }
                }
            ]
        },
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Login (Initiate OAuth)",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/auth/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "login"
                            ]
                        },
                        "description": "Redirects to GitHub OAuth authorization page. Use in browser, not Postman."
                    }
                },
                {
                    "name": "Get Current User",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/auth/me",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "me"
                            ]
                        },
                        "description": "Get currently authenticated user information. Requires valid session cookie."
                    }
                },
                {
                    "name": "Logout",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/auth/logout",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "logout"
                            ]
                        },
                        "description": "Logout and invalidate session"
                    }
                }
            ]
        },
        {
            "name": "User Lookup",
            "item": [
                {
                    "name": "Get User Status (Path)",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/status/{{username}}?no_cache=false",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "status",
                                "{{username}}"
                            ],
                            "query": [
                                {
                                    "key": "no_cache",
                                    "value": "false",
                                    "description": "Set to true to bypass cache"
                                }
                            ]
                        },
                        "description": "Get basic GitHub user status and statistics"
                    }
                },
                {
                    "name": "Get User Status (Body)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"{{username}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/status",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "status"
                            ]
                        },
                        "description": "Get user status by sending username in request body"
                    }
                },
                {
                    "name": "Get Extended User Info",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/user/{{username}}?no_cache=false",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "user",
                                "{{username}}"
                            ],
                            "query": [
                                {
                                    "key": "no_cache",
                                    "value": "false",
                                    "description": "Set to true to bypass cache"
                                }
                            ]
                        },
                        "description": "Get extended user information including repos, events, and contributions"
                    }
                },
                {
                    "name": "Batch User Lookup",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"usernames\": [\n    \"anantacoder\",\n    \"torvalds\",\n    \"gaearon\"\n  ]\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/batch",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "batch"
                            ]
                        },
                        "description": "Get status for multiple users in one request (max 10 users)"
                    }
                }
            ]
        },
        {
            "name": "Rankings",
            "item": [
                {
                    "name": "Get Rankings Leaderboard",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/rankings?page=1&page_size=50",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "rankings"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1",
                                    "description": "Page number (default: 1)"
                                },
                                {
                                    "key": "page_size",
                                    "value": "50",
                                    "description": "Items per page (default: 50, max: 100)"
                                }
                            ]
                        },
                        "description": "Get paginated user rankings leaderboard"
                    }
                },
                {
                    "name": "Get User Ranking",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/rankings/{{username}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "rankings",
                                "{{username}}"
                            ]
                        },
                        "description": "Get specific user's ranking information"
                    }
                },
                {
                    "name": "Update User Ranking",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"{{username}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/rankings/update",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "rankings",
                                "update"
                            ]
                        },
                        "description": "Manually trigger ranking update for a user (requires authentication)"
                    }
                }
            ]
        },
        {
            "name": "AI Comparison",
            "item": [
                {
                    "name": "Compare Two Users",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username1\": \"anantacoder\",\n  \"username2\": \"torvalds\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/ai/compare",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "ai",
                                "compare"
                            ]
                        },
                        "description": "AI-powered comparison between two GitHub users (requires NVIDIA API key)"
                    }
                }
            ]
        },
        {
            "name": "Cache Management",
            "item": [
                {
                    "name": "Get Cache Stats",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/cache/stats",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "cache",
                                "stats"
                            ]
                        },
                        "description": "Get cache statistics (size, hits, misses, hit rate)"
                    }
                },
                {
                    "name": "Clear Cache",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/cache/clear",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "cache",
                                "clear"
                            ]
                        },
                        "description": "Clear all cached data"
                    }
                }
            ]
        }
    ]
}